<script type="text/javascript">
 function validateForm()
 {
 var name=document.getElementById("Name").value;
 var age=document.getElementById("Age").value;
 var gender=document.getElementById("Gender")
 var YOB=document.getElementById("YOB").value;
 var address=document.getElementById("Ad").value;
 var e=document.getElementById("State");
 var strUser=e.options(e.selectedIndex).value;
 var phoneno=document.getElementById("phno").value;
 var x=document.getElementById("e").value;
 var uid=document.getElementById("UID").value;
 var pwd=document.getElementById("PWD").value;
 var cpwd=document.getElementById("CPWD").value;
 var regularExpression=/^(?=.*[\d])(?=.*[!@#$%^&*])[\w!@#$%^&*](8,16)$/;
if(name=="")
{
  alert("name field is empty");
  Name.focus();
  return false;
}
else
{ 
  for(i=0;i<name.length;i++)
  {
      if(!(((name.charAt(i)>="a"&&name.charAt(i)<="z")||       (name.charAt(i)>="A"&&name.charAt(i)<="Z")))
     {
       alert("enter alphabet only in name field");
       document.getElementById("Name").value="";
       Name.focus();
       return false;
      }
    }
}
    if(name.length<3 ||name.length>10)
     {
       alert("username size should be between 3 and 10");
       document.getElementById("Name").value="";
       Name.focus();
       return false;
      }
    if(age=="")
    {
	alert("age field should not be empty");
        Age.focus();
        return false;
     }
    if(age<20||age>80)
     {
	
	alert("age value should be between 20 and 80");
        Age.focus();
        return false;
      }
     else
     {
	for(i=0;i<age.length;i++)
         {
		if(!(age.charAt(i)>="20"&&age.charAt(i)<="80"))
                  {
					
			alert("enter number only between 20 and 80");
			Age.focus();
			return false;
		}	
  	  }
       }
	      if((gender[0].checked==false)&&(gender[1].checked==false)&&(gender[2].checked==false);
{
        alert("please choose your gender male or female or other");
        return false;
}
      if(YOB=="")
	{
	 alert("year of  birth should not be empty");
         YOB.focus();
        return false;	
        }
      else if(2015-age!=YOB)
	{
	 alert("enter exact year of birth");
         YOB.focus();
         document.getElementById("YOB").value="";
        return false;
	}
       if(address=="")
	{
	 alert("address field is empty");
        return false;	
        } 
	if(phoneno=="")
	{
	  alert("phone no field is empty");
        return false;	
        } 
         
 	 if(phoneno.length>10||phoneno.length<10)
     	 {
	
	alert("invalid phone no");
        return false;
        }
        else
 	 {   
	for(i=0;i<phoneno.length;i++)
         {
		if(!(phoneno.charAt(i)>="0"&&phoneno.charAt(i)<="9"))
                  {
					
			alert("enter number only in phone field");
			return false;
		}	
  	  }
   }
  if(strUser==0)
    {
	  alert("select your state");
        return false;	
        } 
         
   if(x=="")
    {
	  alert("email field empty");
        return false;	
        } 
     else
      {
       var atpos=x.indexOf("$");    
       var dotpos=x.indexOf(".");    
       if(atpos<i||dotpos<atpos+2||dotpos+2>=x.length)
	{  
           
	 alert("not a valid email address");
        return false;	
        } 
	 document.getElementById("UID").value=document.getElementById("e").value;
PWD.focus();
}
  if(pwd=="")
	{
	 alert("password field empty");
         PWD.focus();
        return false;	
        }
  if(!regularExpression.test(pwd))
  {
    alert("enter pwd  with min 1 no,special symbol and 8 or mor characters");
         PWD.focus();
        return false;	
        }
   document.getElementById("right_password").innerHTML="Strong Password";
   if(cpwd=="")
    {
	 alert("please confirm your password");
         CPWD.focus();
        return false;	
        }   
   if(cpwd!=pwd)
    {
	 alert("not matching,please enter right password");
         CPWD.focus();
        return false;	
        }   
 alert("validation success");
return true;
}
</script>
</head>
